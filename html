                    <div className="p-4">
                        <div className="flex space-x-1 mb-6 bg-white rounded-2xl p-1 shadow-xl border border-gray-100">
                            {Object.keys(groupNames).map((group) => (
                                <button
                                    key={group}
                                    onClick={() => setActiveGroup(group)}
                                    className={`flex-1 py-3 px-4 rounded-xl text-sm font-semibold transition-all duration-200 ${
                                        activeGroup === group
                                            ? 'bg-red-500 text-white shadow-lg'
                                            : 'text-gray-600 hover:bg-gray-50'
                                    }`}
                                >
                                    {groupNames[group].split(' ')[0]}
                                </button>
                            ))}
                        </div>

                        <motion.div
                            key={activeGroup}
                            initial={{ opacity: 0, y: 20 }}
                            animate={{ opacity: 1, y: 0 }}
                            transition={{ duration: 0.3 }}
                            className="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100"
                        >
                            <div className="p-4 bg-gradient-to-r from-red-500 to-red-600 text-white">
                                <h3 className="text-lg font-semibold">{groupNames[activeGroup]}</h3>
                            </div>

                            <div className="divide-y divide-gray-100">
                                {mockData[activeGroup].map((student, index) => (
                                    <motion.div
                                        key={student.id}
                                        initial={{ opacity: 0, x: -20 }}
                                        animate={{ opacity: 1, x: 0 }}
                                        transition={{ delay: index * 0.1 }}
                                        className="p-4 hover:bg-gray-50 transition-colors"
                                    >
                                        <div className="flex items-center space-x-4">
                                            <div className="flex-shrink-0">
                                                {getRankIcon(student.rank)}
                                            </div>

                                            <div className={`w-8 h-4 rounded-sm border-2 ${beltColors[student.belt]} flex-shrink-0 shadow-sm`}></div>

                                            <div className="flex-1">
                                                <p className="font-semibold text-gray-800">{student.name}</p>
                                                <p className="text-sm text-gray-600">{student.points} –æ—á–∫–æ–≤</p>
                                            </div>

                                            <div className="text-right">
                                                <div className={`text-2xl font-light ${
                                                    student.rank === 1 ? 'text-yellow-500' :
                                                    student.rank === 2 ? 'text-gray-400' :
                                                    student.rank === 3 ? 'text-amber-600' :
                                                    'text-gray-500'
                                                }`}>
                                                    #{student.rank}
                                                </div>
                                            </div>
                                        </div>
                                    </motion.div>
                                ))}
                            </div>
                        </motion.div>

                        <motion.div
                            initial={{ opacity: 0, y: 30 }}
                            animate={{ opacity: 1, y: 0 }}
                            transition={{ delay: 0.5 }}
                            className="mt-6 bg-white rounded-2xl p-6 shadow-xl border border-gray-100"
                        >
                            <h3 className="text-lg font-semibold text-gray-800 mb-4">–°–∏—Å—Ç–µ–º–∞ –ø–æ—è—Å–æ–≤</h3>
                            <div className="grid grid-cols-2 gap-3">
                                {Object.entries(beltColors).map(([belt, colorClass]) => (
                                    <div key={belt} className="flex items-center space-x-3">
                                        <div className={`w-6 h-3 rounded-sm border-2 ${colorClass} shadow-sm`}></div>
                                        <span className="text-sm text-gray-600 font-medium capitalize">
                                            {belt === 'white' ? '–ë–µ–ª—ã–π' :
                                             belt === 'yellow' ? '–ñ—ë–ª—Ç—ã–π' :
                                             belt === 'orange' ? '–û—Ä–∞–Ω–∂–µ–≤—ã–π' :
                                             belt === 'green' ? '–ó–µ–ª—ë–Ω—ã–π' :
                                             belt === 'blue' ? '–°–∏–Ω–∏–π' :
                                             belt === 'brown' ? '–ö–æ—Ä–∏—á–Ω–µ–≤—ã–π' :
                                             '–ß—ë—Ä–Ω—ã–π'}
                                        </span>
                                    </div>
                                ))}
                            </div>
                        </motion.div>

                        <div className="flex justify-center mt-6">
                            <div className="text-red-400 text-3xl">ÊÆµ</div>
                        </div>
                    </div>
                </div>
            );
        }

        // Main App Component
        function App() {
            const [currentPage, setCurrentPage] = useState('home');

            const pages = {
                home: React.createElement(HomePage),
                booking: React.createElement(BookingPage),
                payment: React.createElement(PaymentPage),
                rating: React.createElement(RatingPage)
            };

            const menuItems = [
                { id: 'home', icon: Home, label: '–ì–ª–∞–≤–Ω–∞—è' },
                { id: 'booking', icon: Calendar, label: '–ó–∞–ø–∏—Å—å' },
                { id: 'payment', icon: CreditCard, label: '–û–ø–ª–∞—Ç–∞' },
                { id: 'rating', icon: Trophy, label: '–†–µ–π—Ç–∏–Ω–≥' }
            ];

            return React.createElement(
                'div',
                { className: "min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 flex flex-col" },
                
                React.createElement(
                    'div',
                    { className: "flex-1 pb-20" },
                    React.createElement(
                        AnimatePresence,
                        { mode: "wait" },
                        React.createElement(
                            motion.div,
                            {
                                key: currentPage,
                                initial: { opacity: 0, x: 20 },
                                animate: { opacity: 1, x: 0 },
                                exit: { opacity: 0, x: -20 },
                                transition: { duration: 0.3, ease: "easeInOut" },
                                className: "h-full"
                            },
                            pages[currentPage]
                        )
                    )
                ),

                React.createElement(
                    'div',
                    { className: "fixed bottom-0 left-0 right-0 bg-white/95 backdrop-blur-md border-t border-gray-200 shadow-2xl" },
                    React.createElement(
                        'div',
                        { className: "flex items-center justify-around py-2" },
                        menuItems.map((item) => {
                            const isActive = currentPage === item.id;
                            
                            return React.createElement(
                                motion.button,
                                {
                                    key: item.id,
                                    onClick: () => setCurrentPage(item.id),
                                    className: `flex flex-col items-center p-3 rounded-2xl transition-all duration-200 ${
                                        isActive ? 'text-red-600' : 'text-gray-500'
                                    }`,
                                    whileTap: { scale: 0.95 },
                                    whileHover: { scale: 1.05 }
                                },
                                React.createElement(
                                    motion.div,
                                    {
                                        animate: { 
                                            scale: isActive ? 1.1 : 1,
                                            backgroundColor: isActive ? '#dc2626' : 'transparent'
                                        },
                                        transition: { duration: 0.2 },
                                        className: `p-2 rounded-xl transition-all ${
                                            isActive 
                                                ? 'bg-red-600 text-white shadow-lg shadow-red-200' 
                                                : 'hover:bg-gray-100'
                                        }`
                                    },
                                    React.createElement(item.icon, { size: 22, strokeWidth: 2 })
                                ),
                                React.createElement(
                                    'span',
                                    {
                                        className: `text-xs mt-1 transition-all ${
                                            isActive ? 'font-semibold' : 'font-medium'
                                        }`
                                    },
                                    item.label
                                ),
                                isActive && React.createElement(
                                    motion.div,
                                    {
                                        layoutId: "activeIndicator",
                                        className: "absolute -top-1 w-1 h-1 bg-red-600 rounded-full",
                                        initial: false
                                    }
                                )
                            );
                        })
                    )
                )
            );
        }

        // Render the app
        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(React.createElement(App));
    </script>
</body>
</html>
